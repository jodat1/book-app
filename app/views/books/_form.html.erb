
<div align="center">
<div class="mb-3 col-md-8">
    <%= form_with model: @book do |f|%>
    <%= f.label "Book Title", class:"form-label"%>
    <%= f.text_field :title, placeholder: "Enter book title", class:"form-control"%>
</div>
    <div class="mb-3 col-md-8">
        <%= f.label "Book Description",class:"form-label"%>
        <%= f.text_area :description, placeholder: "Enter book description", class:"form-control"%>
    </div>
    <div class="mb-3 col-md-8">
        <%= f.label "Book Price",class:"form-label"%>
        <%= f.text_field :price, placeholder: "Enter book price", class:"form-control"%>
    </div>
    <div class = "col-sm-8">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class:"checkbox") + cb.text} %>
        <%end%>

    </div>
    <%= f.submit class:"btn btn-primary"%>
    <%end%>
</div>